<%= form_for(@contact, remote: true, html: { style: "display:inline;", class: "form-vertical"}) do |f| %>
  <div class="modal-body">
    <ul class="list-group errors"></ul>
    <div class="form-group">
      <%= f.label :name, class: "control-label" %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :title, class: "control-label" %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :type, class: "control-label" %><br>
      <%= f.text_field :type, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :phone, class: "control-label" %><br>
      <%= f.text_field :phone, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :ext, class: "control-label" %><br>
      <%= f.text_field :ext, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :fax, class: "control-label" %><br>
      <%= f.text_field :fax, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "control-label" %><br>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary"  %>
      <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
    </div>
  </div>
<% end %>


